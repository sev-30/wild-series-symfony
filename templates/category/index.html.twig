
{% extends 'base.html.twig' %}

{# Affiche les programmes d'une catégorie : #}

{% block title %}All categories{% endblock %}


{% block body %}

    <h1>Liste des catégories : </h1>
    <ul>
    {% for category in categories %}
        <li>{{ loop.index }} / {{ category.name }}
             <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir les séries</a>
        </li>
    {% endfor %}
    </ul>
{% endblock %}